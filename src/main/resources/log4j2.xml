<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info">
    <Properties>
        <Property name="prefix">[%-5level] %d{HH:mm:ss}</Property>
    </Properties>

    <Appenders>
        <Console name="Errors" target="SYSTEM_OUT">
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <pattern>%highlight{${prefix} - %C{-3}.%M(%F:%L) - %m%n}</pattern>
            </PatternLayout>
        </Console>

        <Console name="Info" target="SYSTEM_OUT">
            <ThresholdFilter level="warn" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout>
                <pattern>%highlight{${prefix} - %C{-3} - %m%n}</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Errors"/>
            <AppenderRef ref="Info"/>
        </Root>
    </Loggers>
</Configuration>
